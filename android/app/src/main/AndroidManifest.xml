<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ðŸŒ Permisos necesarios -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- ðŸ“¸ Permiso de cÃ¡mara -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- ðŸ–¼ï¸ Permisos para galerÃ­a -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Android 13 (API 33) permisos separados -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>

    <application
        android:name="${applicationName}"
        android:label="Juanchos"
        android:icon="@mipmap/ic_launcher">

        <!-- ðŸ”‘ Clave de API de Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBIZrptkE0IGakPhzMzMpq4PaW_gw_D1vk" />

        <!-- ðŸš€ Actividad principal de Flutter -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Tema normal -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- Punto de entrada -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Necesario para Flutter -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- ðŸ” Permite consultas de texto requeridas por algunos plugins -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>

</manifest>
